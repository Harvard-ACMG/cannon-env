alias  pu="rm *~"
alias  sb=". ~/.bash_profile"
alias  ssh="ssh -X -A"
alias  gsh="ssh -xT"
alias  tf="tail --follow"
alias  zap="kill -9"

# %%%%% Aliases for directory listing %%%%%
alias  ls="ls -CF --time-style=long-iso --color=auto"
