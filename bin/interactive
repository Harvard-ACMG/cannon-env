#!/bin/bash

#------------------------------------------------------------------------------
#          Harvard University Atmospheric Chemistry Modeling Group            !
#------------------------------------------------------------------------------
#BOP
#
# !MODULE: interactive
#
# !DESCRIPTION: Shell script to request an interactive session on Odyssey.
#\\
#\\
# !CALLING SEQUENCE:
#  interactive CPUS NODES MEMORY-PER-CPU [TIME-IN-MINUTES] [PARTITION]
#
# !REMARKS:
#  Executes the srun command.  For now, all CPUs are placed on one node,
#  for traditional GEOS-Chem usage.
#
# !REVISION HISTORY: 
#  28 Oct 2014 - R. Yantosca - Initial version
#  10 Jul 2015 - R. Yantosca - Now print the input arguments to stdout
#  01 Sep 2015 - R. Yantosca - Now start pass the partition as the 5th arg
#EOP
#------------------------------------------------------------------------------
#BOC


# Process the input arguments.  Use defaults if the
# user supplies less than 4 argumetnts. (bmy, 7/10/15)
if [[ $# == 5 ]]; then
   cpus=$1
   nodes=$2
   mem=$3
   time=$4
   part=$5
elif [[ $# == 4 ]]; then
   cpus=$1
   nodes=$2
   mem=$3
   time=$4
   part=jacob
elif [[ $# == 3 ]]; then
   cpus=$1
   nodes=$2
   mem=$3
   time=60
   part=jacob
elif [[ $# == 2 ]] ; then
   cpus=$1
   nodes=1
   mem=$2
   time=60
   part=jacob
else
   echo "Usage: interactive CPUS NODES MEM-PER-CPU [TIME-IN-MINUTES]"
   exit 1
fi

# Print information
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
echo "%%% Starting an Odyssey interactive session!"
echo "%%% Number of CPUs      : $cpus"
echo "%%% Number of Nodes     : $nodes"
echo "%%% Memory per CPU      : $mem MB"
echo "%%% Requested time      : $time minutes"
echo "%%% Requested partition : $part"
echo "%%%"
echo "%%% Reminder: Make sure $OMP_NUM_THREADS in your shell is set"
echo "%%% to the same number of CPUs that you requested!"
echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"

# Start the interactive session
srun --pty --x11=first -n $cpus -N $nodes --mem-per-cpu=$mem -p $part /bin/bash

#EOC